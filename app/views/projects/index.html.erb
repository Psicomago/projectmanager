<h1 class="text-center p-4">Projects</h1>

<div class="card-group container">
  <div class="row row-cols-1 row-cols-md-6 g-4">
    <% @project.each do |project| %>
      <div class="col">
        <div class="card bg-light">
          <%# <img src="..." class="card-img-top" alt="..."> %>
          <div class="card-body">
            <h5 class="card-title fs-4"><%= project.name %></h5>
            <p class="card-text fs-5"><%= project.description %></p>
            <hr>
            <p class="card-text fs-5"><%= fecha(project.date_begin) %></p>
            <p class="card-text fs-5"><%= fecha(project.date_end) %></p>
            <hr>
            <p class="card-text fs-5"><%= project.status %></p>
            <p class="card-text text-center"><small class="text-muted"><%= link_to 'Ver', project %> <%= link_to 'Editar', edit_project_path(project) %> <%= link_to 'Eliminar', project, method: :delete, data: { confirm: 'Are you sure?' } %></small></p>
          </div>
        </div>
      </div>
    <% end %> 
  </div>
</div>

